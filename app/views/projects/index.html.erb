<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<div id="gridDisplay">
  <% @projects.in_groups_of(3, false).each do |group| %>
    <div class='row'>
      <% group.each do |project| %>
        <div class='col-md-4'>
          <p class="titleGridDisplay"><%= project.title %></p>
          <%= image_tag(project.images[0], class: "img-responsive") %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<br>

<%= link_to 'New Project', new_project_path %>
